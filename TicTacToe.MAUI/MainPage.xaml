<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TicTacToe.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TicTacToe.Views"
    xmlns:viewModels="clr-namespace:TicTacToe.ViewModels"
    x:DataType="viewModels:MainPageViewModel">

    <Shell.TitleView>
        <StackLayout>
            <Button
                x:Name="btnAbout"
                Command="{Binding AboutClickCommand}"
                FontSize="14"
                HorizontalOptions="End"
                Text="About" />
        </StackLayout>
    </Shell.TitleView>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="*" />
            <RowDefinition Height="AUTO" />
            <RowDefinition Height="AUTO" />
            <RowDefinition Height="*" />
            <RowDefinition Height="AUTO" />
            <RowDefinition Height="AUTO" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label
            x:Name="lblTicTacToe"
            FontSize="32"
            HorizontalOptions="Center"
            SemanticProperties.HeadingLevel="Level1"
            Text="TIC-TAC-TOE"
            VerticalOptions="End" />

        <Grid Grid.Row="2" HorizontalOptions="Center">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="36" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>

            <CheckBox
                x:Name="chkTwoPlayer"
                Grid.Column="0"
                IsChecked="{Binding TwoPlayer}"
                VerticalOptions="Center" />
            <Label
                x:Name="lblTwoPlayer"
                Grid.Column="1"
                FontSize="24"
                Text="Two Player?"
                VerticalOptions="Center" />

        </Grid>

        <Grid Grid.Row="3" HorizontalOptions="Center">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="36" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>

            <CheckBox
                x:Name="chkComputerStarts"
                Grid.Column="0"
                IsChecked="{Binding ComputerStarts}"
                VerticalOptions="Center" />
            <Label
                x:Name="lblComputerStarts"
                Grid.Column="1"
                FontSize="24"
                Text="Computer Starts?"
                VerticalOptions="Center" />

        </Grid>

        <Button
            x:Name="btnStart"
            Grid.Row="5"
            Margin="8"
            Command="{Binding StartClickCommand}"
            FontSize="32"
            HorizontalOptions="Center"
            Text="Start" />

        <Button
            x:Name="btnQuit"
            Grid.Row="6"
            Margin="8"
            Padding="18,8"
            Command="{Binding QuitClickCommand}"
            FontSize="32"
            HorizontalOptions="Center"
            Text="Quit" />
    </Grid>

</ContentPage>
