<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TicTacToe.Views.AboutView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:TicTacToe.ViewModels"
    x:DataType="viewModels:AboutViewModel">
    <ScrollView
        x:Name="scrViewAbout"
        Margin="0"
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand"
        VerticalScrollBarVisibility="Default">
        <VerticalStackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">

            <Label
                x:Name="lblTicTacToe"
                Margin="0,6"
                FontSize="32"
                HorizontalOptions="Center"
                SemanticProperties.HeadingLevel="Level1"
                Text="TIC-TAC-TOE" />

            <Image
                x:Name="imgDotNetBot"
                Margin="0,6"
                HeightRequest="200"
                HorizontalOptions="Center"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                Source="dotnet_bot.png" />

            <Label
                x:Name="lblNetMultiplatformApp"
                Margin="0,6"
                FontSize="16"
                HorizontalOptions="Center"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I"
                SemanticProperties.HeadingLevel="Level2"
                Text="A .NET Multi-platform App UI" />

            <Label
                x:Name="lblAuthor"
                Margin="0,2"
                FontSize="14"
                HorizontalOptions="Center"
                Text="{Binding Author, StringFormat='Created By: {0}'}" />

            <Label
                x:Name="lblVersion"
                Margin="0,2"
                FontSize="14"
                HorizontalOptions="Center"
                Text="{Binding Version, StringFormat='Version: {0}'}" />

            <Label
                x:Name="lblPublishDate"
                Margin="0,2"
                FontSize="14"
                HorizontalOptions="Center"
                Text="{Binding PublishDateTime, StringFormat='Date Published: {0:MMMM d, yyyy}'}" />

            <Label
                x:Name="lblLicense"
                Margin="0,2"
                FontSize="14"
                HorizontalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="License: " />
                        <Span
                            Text="MIT"
                            TextColor="Blue"
                            TextDecorations="Underline" />
                    </FormattedString>
                </Label.FormattedText>
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding UrlClickCommand}" CommandParameter="https://licenses.nuget.org/MIT" />
                </Label.GestureRecognizers>
            </Label>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
